<?xml version='1.0' encoding='utf-8'?>
<scheduledTasks xmlns="http://xmlns.oracle.com/oim/scheduler">
    <task>
        <name>Absence Control of Users Accounts</name>
        <class>entel.oim.plugins.scheduler.AbsenceControlTask</class>
        <description>Task that executes the absence control of OIM users and their accounts</description>
        <retry>5</retry>
        <parameters>
            <string-param required="true" encrypted="false" helpText="IT Resource name">IT Resource Name</string-param>
            <string-param required="true" encrypted="false" helpText="Applications Instance Names to be activated/deactivated">Application Instance Names</string-param>
            <string-param required="true" encrypted="false" helpText="Service Of SuccessFactors to call">Service</string-param>
            <string-param required="false" encrypted="false" helpText="RUT for filtered execution">Filter RUT</string-param>
            <string-param required="true" encrypted="false" helpText="Types of Absences">Types of Absences</string-param>
        </parameters>
    </task>
</scheduledTasks>
